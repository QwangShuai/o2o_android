<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--主页底部按钮RelativeLayout样式-->
    <style name="rl_main">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/selector_press_or_not</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    <!--主页底部按钮LinearLayout样式-->
    <style name="ll_main">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_marginTop">@dimen/y2</item>
        <item name="android:layout_marginBottom">@dimen/y2</item>
    </style>
    <!--主页底部按钮ImageView样式-->
    <style name="iv_main">
        <item name="android:layout_width">@dimen/y15</item>
        <item name="android:layout_height">@dimen/y15</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
    <!--主页底部按钮TextView样式-->
    <style name="tv_main">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/y8</item>
        <item name="android:layout_marginTop">@dimen/y1</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
    <!--顶部标题样式-->
    <style name="tv_top_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/y15</item>
        <item name="android:textColor">@color/tv_main_default</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!--分割线样式-->
    <style name="v_split">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/y1</item>
        <item name="android:background">@color/side</item>
    </style>
    <!--首页图片样式-->
    <style name="iv_first_page">
        <item name="android:layout_width">@dimen/x300</item>
        <item name="android:layout_height">@dimen/y100</item>
        <item name="android:layout_marginTop">@dimen/y5</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:scaleType">fitXY</item>
    </style>
    <!--我的客服LinearLayout外部样式-->
    <style name="ll_mine_service_out">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/x10</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@android:color/white</item>
    </style>
    <!--我的客服LinearLayout内部样式-->
    <style name="ll_mine_service_in">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/selector_press_or_not</item>
    </style>
    <!--我的客服图片样式-->
    <style name="iv_mine_service">
        <item name="android:layout_width">@dimen/x30</item>
        <item name="android:layout_height">@dimen/x30</item>
        <item name="android:layout_marginBottom">@dimen/x5</item>
        <item name="android:layout_marginLeft">@dimen/x10</item>
        <item name="android:layout_marginTop">@dimen/x5</item>
        <item name="android:scaleType">fitXY</item>
    </style>
    <!--我的客服文字样式-->
    <style name="tv_mine_service">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/x5</item>
        <item name="android:textColor">@color/side</item>
        <item name="android:textSize">@dimen/x15</item>
    </style>
    <!--顶部bar样式
    <RelativeLayout-->
    <style name="rl_top_bar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/y30</item>
        <item name="android:background">@android:color/white</item>
    </style>
    <!--返回RelativeLayout样式-->
    <style name="rl_return">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/selector_press_or_not</item>
    </style>
    <!--返回图片样式-->
    <style name="iv_return">
        <item name="android:layout_width">@dimen/y18</item>
        <item name="android:layout_height">@dimen/y18</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:src">@mipmap/left</item>
        <item name="android:layout_marginLeft">@dimen/y10</item>
        <item name="android:layout_marginRight">@dimen/y10</item>
    </style>
    <!--自定义进度对话框样式-->
    <style name="dialog_cprogress" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/shape_dialog_cprogress</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>
