<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/y4"
        android:background="@drawable/sl_me_login"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/y4"
        android:paddingLeft="@dimen/y6"
        android:paddingRight="@dimen/y6"
        android:paddingTop="@dimen/y4">

        <TextView
            android:id="@+id/tv_item_screen_history_kind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:textSize="@dimen/y10" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="+"
            android:textColor="@android:color/black"
            android:textSize="@dimen/y10" />

        <TextView
            android:id="@+id/tv_item_screen_history_dis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:textSize="@dimen/y10" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="+"
            android:textColor="@android:color/black"
            android:textSize="@dimen/y10" />

        <TextView
            android:id="@+id/tv_item_screen_history_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:textSize="@dimen/y10" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/iv_item_screen_history_del"
            android:layout_width="@dimen/y15"
            android:layout_height="@dimen/y15"
            android:layout_gravity="center_vertical"
            android:scaleType="fitXY"
            android:src="@mipmap/close" />

    </LinearLayout>

</RelativeLayout>