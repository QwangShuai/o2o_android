<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_job"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_c4ced3"
    android:orientation="vertical"
    tools:context="activity.JobActivity">

    <RelativeLayout style="@style/rl_top_bar">

        <RelativeLayout
            android:id="@+id/rl_job_return"
            style="@style/rl_return">

            <ImageView style="@style/iv_return" />

        </RelativeLayout>

        <TextView
            style="@style/tv_top_title"
            android:text="工作信息" />

        <RelativeLayout
            android:id="@+id/rl_job_screen"
            style="@style/rl_return"
            android:layout_alignParentRight="true">

            <ImageView
                style="@style/iv_return"
                android:src="@mipmap/screen" />

        </RelativeLayout>

    </RelativeLayout>

    <refreshload.PullToRefreshLayout
        android:id="@+id/ptrl_job"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/y5">

        <include layout="@layout/refresh_head" />

        <refreshload.PullableListView
            android:id="@+id/lv_job"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/gray_c4ced3"
            android:dividerHeight="@dimen/y5" />

        <include layout="@layout/load_more" />

    </refreshload.PullToRefreshLayout>

</LinearLayout>
