<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

    </LinearLayout>

    <View style="@style/v_split" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/y5"
            android:text="您给该工人的工资"
            android:textColor="@color/gray_a0a0a0"
            android:textSize="@dimen/y10" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/y5"
            android:text="200元/人/天,工期2天"
            android:textColor="@color/black_252323"
            android:textSize="@dimen/y11"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/y5"
            android:text="结算工资的时候系统会收取工人XX元的服务费"
            android:textColor="@color/red_ff3e50"
            android:textSize="@dimen/y8" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="扣除服务费工人最终会得到XX元的工资"
            android:textColor="@color/red_ff3e50"
            android:textSize="@dimen/y8" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/y5"
            android:text="确认工人到岗并开工，是否确认开工？"
            android:textColor="@color/gray_a0a0a0"
            android:textSize="@dimen/y10" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/y5"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_pop_start_work_no"
                android:layout_width="@dimen/y50"
                android:layout_height="wrap_content"
                android:background="@drawable/sl_me_login"
                android:gravity="center"
                android:padding="@dimen/y5"
                android:text="先不开工"
                android:textColor="@color/black_252323"
                android:textSize="@dimen/y10" />

            <TextView
                android:id="@+id/tv_pop_start_work_change"
                android:layout_width="@dimen/y50"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/y10"
                android:layout_marginRight="@dimen/y10"
                android:background="@drawable/sl_me_login"
                android:gravity="center"
                android:padding="@dimen/y5"
                android:text="修改工资"
                android:textColor="@color/black_252323"
                android:textSize="@dimen/y10" />

            <TextView
                android:id="@+id/tv_pop_start_work_yes"
                android:layout_width="@dimen/y50"
                android:layout_height="wrap_content"
                android:background="@drawable/sl_me_login"
                android:gravity="center"
                android:padding="@dimen/y5"
                android:text="开工"
                android:textColor="@color/black_252323"
                android:textSize="@dimen/y10" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>