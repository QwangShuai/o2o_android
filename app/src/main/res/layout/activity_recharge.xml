<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_recharge"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context="activity.RechargeActivity">

    <RelativeLayout style="@style/rl_top_bar">

        <RelativeLayout
            android:id="@+id/rl_recharge_return"
            style="@style/rl_return">

            <ImageView style="@style/iv_return" />

        </RelativeLayout>

        <TextView
            style="@style/tv_top_title"
            android:text="充值" />

    </RelativeLayout>

    <View style="@style/v_split" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginTop="@dimen/y11"
            android:text="充值金额"
            android:textColor="@color/black_252323"
            android:textSize="@dimen/y12" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/y15"
            android:layout_marginRight="@dimen/y15"
            android:layout_marginTop="@dimen/y15"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥"
                android:textColor="@color/black_252323"
                android:textSize="@dimen/y12" />

            <EditText
                android:id="@+id/et_recharge_money"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/y10"
                android:layout_marginRight="@dimen/y10"
                android:background="@null"
                android:inputType="number"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/y12" />

        </LinearLayout>

        <View
            style="@style/v_split"
            android:layout_marginLeft="@dimen/y10"
            android:layout_marginRight="@dimen/y10"
            android:layout_marginTop="@dimen/y4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginTop="@dimen/y30"
            android:text="支付方式"
            android:textColor="@color/gray_a0a0a0"
            android:textSize="@dimen/y11" />

        <View
            style="@style/v_split"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:layout_marginTop="@dimen/y4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/y5"
            android:layout_marginTop="@dimen/y5"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_recharge_wx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/y30"
                    android:layout_height="@dimen/y30"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="@dimen/y5"
                    android:layout_marginLeft="@dimen/y24"
                    android:layout_marginTop="@dimen/y5"
                    android:scaleType="fitXY"
                    android:src="@mipmap/wx_pay" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/y15"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="微信支付"
                    android:textColor="@color/black_252323"
                    android:textSize="@dimen/y12" />

                <ImageView
                    android:id="@+id/iv_recharge_wx_point"
                    android:layout_width="@dimen/y15"
                    android:layout_height="@dimen/y15"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/y24"
                    android:scaleType="fitXY"
                    android:src="@mipmap/pay_choosed" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_recharge_zfb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/y30"
                    android:layout_height="@dimen/y30"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="@dimen/y5"
                    android:layout_marginLeft="@dimen/y24"
                    android:layout_marginTop="@dimen/y5"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ali_pay" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/y15"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="支付宝支付"
                    android:textColor="@color/black_252323"
                    android:textSize="@dimen/y12" />

                <ImageView
                    android:id="@+id/iv_recharge_zfb_point"
                    android:layout_width="@dimen/y15"
                    android:layout_height="@dimen/y15"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/y24"
                    android:scaleType="fitXY"
                    android:src="@mipmap/point_gray" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_recharge_yl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/y30"
                    android:layout_height="@dimen/y30"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="@dimen/y5"
                    android:layout_marginLeft="@dimen/y24"
                    android:layout_marginTop="@dimen/y5"
                    android:scaleType="fitXY"
                    android:src="@mipmap/yl_pay" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/y15"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="银联支付"
                    android:textColor="@color/black_252323"
                    android:textSize="@dimen/y12" />

                <ImageView
                    android:id="@+id/iv_recharge_yl_point"
                    android:layout_width="@dimen/y15"
                    android:layout_height="@dimen/y15"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/y24"
                    android:scaleType="fitXY"
                    android:src="@mipmap/point_gray" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_recharge_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/sp_login_get"
            android:paddingBottom="@dimen/y4"
            android:paddingLeft="@dimen/y34"
            android:paddingRight="@dimen/y34"
            android:paddingTop="@dimen/y4"
            android:text="去支付"
            android:textColor="@color/white_ffffff"
            android:textSize="@dimen/y12" />

    </LinearLayout>

</LinearLayout>
