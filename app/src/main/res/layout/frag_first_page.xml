<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_c4ced3"
    android:orientation="vertical">

    <RelativeLayout
        style="@style/rl_top_bar"
        android:layout_marginBottom="@dimen/y5">

        <RelativeLayout
            android:id="@+id/rl_frag_first_page_city"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clickable="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x10"
                android:layout_marginRight="@dimen/x10"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="哈尔滨"
                    android:textColor="@color/blue_2681fc"
                    android:textSize="@dimen/x15" />

                <ImageView
                    android:layout_width="@dimen/x10"
                    android:layout_height="@dimen/x10"
                    android:layout_gravity="center_vertical"
                    android:scaleType="fitXY"
                    android:src="@mipmap/arrow_b" />

            </LinearLayout>

        </RelativeLayout>

        <TextView
            style="@style/tv_top_title"
            android:text="钢建众工" />

        <RelativeLayout
            android:id="@+id/rl_frag_first_page_msg"
            style="@style/rl_return"
            android:layout_alignParentRight="true">

            <ImageView
                style="@style/iv_return"
                android:src="@mipmap/message" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x30"
                android:layout_marginTop="@dimen/y2"
                android:background="@drawable/sl_time_stamp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLength="2"
                android:text="99"
                android:textColor="@android:color/white"
                android:textSize="@dimen/x10" />

        </RelativeLayout>

    </RelativeLayout>

    <ListView
        android:id="@+id/lv_frag_first_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/gray_c4ced3"
        android:dividerHeight="@dimen/y5" />

</LinearLayout>