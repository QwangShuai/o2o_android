<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/y5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="昵称"
            android:textColor="@android:color/black"
            android:textSize="@dimen/y10"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_item_editinfo_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/y5"
            android:layout_weight="1"
            android:background="@null"
            android:ellipsize="end"
            android:gravity="right"
            android:hint="请输入昵称"
            android:maxLength="25"
            android:singleLine="true"
            android:textColor="@color/black_252323"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/y10" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/y5">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="性别"
            android:textColor="@android:color/black"
            android:textSize="@dimen/y10"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/rg_item_editinfo_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_item_editinfo_male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="男"
                android:textSize="@dimen/y10" />

            <RadioButton
                android:id="@+id/rb_item_editinfo_female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="女"
                android:textSize="@dimen/y10" />

        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/y5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="身份证号"
            android:textColor="@android:color/black"
            android:textSize="@dimen/y10"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_item_editinfo_idcard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/y5"
            android:layout_weight="1"
            android:background="@null"
            android:ellipsize="end"
            android:gravity="right"
            android:hint="请输入身份证号"
            android:maxLength="18"
            android:singleLine="true"
            android:textColor="@color/black_252323"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/y10" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/y5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="现居地"
            android:textColor="@android:color/black"
            android:textSize="@dimen/y10"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_item_editinfo_area"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/y5"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="right"
            android:singleLine="true"
            android:textColor="@color/black_252323"
            android:textSize="@dimen/y10" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/y5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="详细地址"
            android:textColor="@android:color/black"
            android:textSize="@dimen/y10"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_item_editinfo_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/y5"
            android:layout_weight="1"
            android:background="@null"
            android:ellipsize="end"
            android:gravity="right"
            android:hint="请填写详细地址"
            android:maxLength="80"
            android:singleLine="true"
            android:textColor="@color/black_252323"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/y10" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/y5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="个人简介"
            android:textColor="@android:color/black"
            android:textSize="@dimen/y10"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_item_editinfo_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/y5"
            android:layout_weight="1"
            android:background="@null"
            android:ellipsize="end"
            android:gravity="right"
            android:hint="请简要描述自己"
            android:maxLength="255"
            android:singleLine="true"
            android:textColor="@color/black_252323"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/y10" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/y5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="手机号码（已绑定）"
            android:textColor="@android:color/black"
            android:textSize="@dimen/y10"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_item_editinfo_mobile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/y5"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="right"
            android:singleLine="true"
            android:textColor="@color/black_252323"
            android:textSize="@dimen/y10" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/y5">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="角色选择"
            android:textColor="@android:color/black"
            android:textSize="@dimen/y10"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/rg_item_editinfo_role"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_item_editinfo_employer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我不是工人"
                android:textSize="@dimen/y10" />

            <RadioButton
                android:id="@+id/rb_item_editinfo_worker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我是工人"
                android:textSize="@dimen/y10" />

        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_item_editinfo_worker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <GridView
            android:id="@+id/gv_item_editinfo"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="@dimen/y5"
            android:layout_marginLeft="@dimen/y5"
            android:numColumns="4" />

        <ImageView
            android:id="@+id/iv_item_editinfo_addskill"
            android:layout_width="@dimen/y30"
            android:layout_height="@dimen/y30"
            android:layout_marginBottom="@dimen/y5"
            android:layout_marginLeft="@dimen/y5"
            android:scaleType="fitXY"
            android:src="@mipmap/add_photo" />

    </LinearLayout>

</LinearLayout>