<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_c4ced3"
    android:orientation="vertical"
    tools:context="workerscreen.view.WorkerScreenActivity">

    <RelativeLayout style="@style/rl_top_bar">

        <RelativeLayout
            android:id="@+id/rl_screen_close"
            style="@style/rl_return">

            <ImageView
                style="@style/iv_return"
                android:src="@mipmap/close" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_screen_search"
            style="@style/rl_return"
            android:layout_alignParentRight="true">

            <ImageView
                style="@style/iv_return"
                android:src="@mipmap/search" />

        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@android:color/white"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_screen_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/y10"
            android:layout_marginRight="@dimen/y10"
            android:layout_marginTop="@dimen/y12"
            android:background="@drawable/sl_me_login"
            android:hint="请输入工人昵称"
            android:padding="@dimen/y7"
            android:textColorHint="@color/gray_a0a0a0"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/y10" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/y10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="工人状态："
                android:textSize="@dimen/y10" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/y10">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_screen_worker_leisure"
                        android:layout_width="@dimen/y22"
                        android:layout_height="@dimen/y12"
                        android:scaleType="fitXY"
                        android:src="@mipmap/worker_leisure" />

                    <ImageView
                        android:id="@+id/iv_screen_worker_mid"
                        android:layout_width="@dimen/y22"
                        android:layout_height="@dimen/y12"
                        android:layout_marginLeft="@dimen/x10"
                        android:scaleType="fitXY"
                        android:src="@mipmap/worker_mid_g" />

                </LinearLayout>

            </HorizontalScrollView>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
