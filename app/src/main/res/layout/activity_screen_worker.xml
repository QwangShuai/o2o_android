<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_c4ced3"
    android:orientation="vertical"
    tools:context="workerscreen.view.WorkerScnActivity">

    <RelativeLayout style="@style/rl_top_bar">

        <RelativeLayout
            android:id="@+id/rl_screen_close"
            style="@style/rl_return">

            <ImageView
                android:layout_width="@dimen/y18"
                android:layout_height="@dimen/y18"
                android:layout_marginBottom="@dimen/y3"
                android:layout_marginLeft="@dimen/y10"
                android:layout_marginTop="@dimen/y3"
                android:scaleType="fitXY"
                android:src="@mipmap/close" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_screen_search"
            style="@style/rl_return"
            android:layout_alignParentRight="true">

            <ImageView
                android:layout_width="@dimen/y18"
                android:layout_height="@dimen/y18"
                android:layout_marginBottom="@dimen/y3"
                android:layout_marginRight="@dimen/y10"
                android:layout_marginTop="@dimen/y3"
                android:scaleType="fitXY"
                android:src="@mipmap/search" />

        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@android:color/white"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_screen_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/y10"
            android:layout_marginRight="@dimen/y10"
            android:layout_marginTop="@dimen/y12"
            android:background="@drawable/sl_me_login"
            android:hint="请输入工人姓名"
            android:padding="@dimen/y7"
            android:textColorHint="@color/gray_a0a0a0"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/y10" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/y10"
            android:layout_marginRight="@dimen/y10"
            android:layout_marginTop="@dimen/y10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="工人状态："
                android:textSize="@dimen/y10" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/y10">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_screen_leisure"
                        android:layout_width="@dimen/y35"
                        android:layout_height="@dimen/y18"
                        android:scaleType="fitXY"
                        android:src="@mipmap/worker_leisure" />

                    <ImageView
                        android:id="@+id/iv_screen_talk"
                        android:layout_width="@dimen/y35"
                        android:layout_height="@dimen/y18"
                        android:layout_marginLeft="@dimen/x10"
                        android:scaleType="fitXY"
                        android:src="@mipmap/worker_talk_g" />

                    <ImageView
                        android:id="@+id/iv_screen_mid"
                        android:layout_width="@dimen/y35"
                        android:layout_height="@dimen/y18"
                        android:layout_marginLeft="@dimen/x10"
                        android:scaleType="fitXY"
                        android:src="@mipmap/worker_mid_g" />

                </LinearLayout>

            </HorizontalScrollView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_screen_dis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/y10"
            android:layout_marginRight="@dimen/y10"
            android:layout_marginTop="@dimen/y10"
            android:clickable="true"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="搜索范围："
                android:textSize="@dimen/y10" />

            <TextView
                android:id="@+id/tv_screen_dis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/y10"
                android:singleLine="true"
                android:text="请选择搜索范围"
                android:textColor="@android:color/black"
                android:textSize="@dimen/x15" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_screen_kind"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/y10"
            android:layout_marginLeft="@dimen/y10"
            android:layout_marginRight="@dimen/y10"
            android:layout_marginTop="@dimen/y10"
            android:clickable="true"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择工种："
                android:textSize="@dimen/y10" />

            <TextView
                android:id="@+id/tv_screen_kind"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/y10"
                android:singleLine="true"
                android:text="请选择工种"
                android:textColor="@android:color/black"
                android:textSize="@dimen/x15" />

        </LinearLayout>

    </LinearLayout>

    <ListView
        android:id="@+id/lv_screen_history"
        android:layout_width="@dimen/y211"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:divider="@null" />

</LinearLayout>
