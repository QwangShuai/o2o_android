<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y5"
        android:background="@android:color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_press_or_not"
            android:padding="@dimen/y5">

            <TextView
                android:id="@+id/tv_item_message_offer_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="@dimen/x15" />

            <TextView
                android:id="@+id/tv_item_message_offer_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@android:color/black"
                android:textSize="@dimen/x10" />

            <TextView
                android:id="@+id/tv_item_message_offer_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_item_message_offer_title"
                android:layout_marginTop="@dimen/y5"
                android:ellipsize="end"
                android:singleLine="true"
                android:textSize="@dimen/x10" />

            <ImageView
                android:id="@+id/iv_item_system_message_arrow"
                android:layout_width="@dimen/x10"
                android:layout_height="@dimen/x10"
                android:layout_alignBottom="@+id/tv_item_message_offer_des"
                android:layout_alignParentRight="true"
                android:scaleType="fitXY"
                android:src="@mipmap/arrow_r" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>