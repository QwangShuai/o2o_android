<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_ffffff"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/y23"
            android:text="确认不想用该工人？"
            android:textColor="@color/black_252323"
            android:textSize="@dimen/y11" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/y10"
            android:text="确认之后您将无法与Ta联系"
            android:textColor="@color/black_252323"
            android:textSize="@dimen/y11" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/y30"
            android:layout_marginLeft="@dimen/y29"
            android:layout_marginRight="@dimen/y29"
            android:layout_marginTop="@dimen/y27">

            <TextView
                android:id="@+id/tv_pop_cancel_worker_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/sl_invite"
                android:paddingBottom="@dimen/y5"
                android:paddingLeft="@dimen/y7"
                android:paddingRight="@dimen/y7"
                android:paddingTop="@dimen/y5"
                android:text="再考虑考虑"
                android:textColor="@color/white_ffffff"
                android:textSize="@dimen/y10" />

            <TextView
                android:id="@+id/tv_pop_cancel_worker_yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/sp_login_get"
                android:paddingBottom="@dimen/y5"
                android:paddingLeft="@dimen/y11"
                android:paddingRight="@dimen/y11"
                android:paddingTop="@dimen/y5"
                android:text="不想用Ta"
                android:textColor="@color/white_ffffff"
                android:textSize="@dimen/y10" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>