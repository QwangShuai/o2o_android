<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_setting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_c4ced3"
    android:orientation="vertical"
    tools:context="set.view.SetActivity">

    <RelativeLayout style="@style/rl_top_bar">

        <RelativeLayout
            android:id="@+id/rl_set_return"
            style="@style/rl_return">

            <ImageView style="@style/iv_return" />

        </RelativeLayout>

        <TextView
            style="@style/tv_top_title"
            android:text="设置" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y5"
                android:background="@android:color/white">

                <RelativeLayout
                    android:id="@+id/rl_set_phone_bind"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true">

                    <TextView
                        style="@style/tv_set"
                        android:text="手机绑定" />

                    <ImageView
                        android:id="@+id/iv_set_phone"
                        style="@style/iv_set" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/y10"
                        android:layout_toLeftOf="@+id/iv_set_phone"
                        android:text="152****4239"
                        android:textColor="@color/gray_a0a0a0"
                        android:textSize="@dimen/y12" />

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y10"
                android:background="@android:color/white">

                <RelativeLayout
                    android:id="@+id/rl_set_cache_clear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true">

                    <TextView
                        style="@style/tv_set"
                        android:text="清除缓存" />

                    <ImageView style="@style/iv_set" />

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y10"
                android:background="@android:color/white">

                <RelativeLayout
                    android:id="@+id/rl_set_msg_tip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true">

                    <TextView
                        style="@style/tv_set"
                        android:text="消息提示" />

                    <ImageView style="@style/iv_set" />

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_set_quit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/y193"
                android:background="@drawable/sp_login_get"
                android:clickable="true"
                android:paddingBottom="@dimen/y7"
                android:paddingLeft="@dimen/y27"
                android:paddingRight="@dimen/y27"
                android:paddingTop="@dimen/y7">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="退出登录"
                    android:textColor="@color/white_ffffff"
                    android:textSize="@dimen/y12" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
