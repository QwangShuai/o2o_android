<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/y2"
        android:layout_marginLeft="@dimen/y5"
        android:layout_marginRight="@dimen/y5"
        android:layout_marginTop="@dimen/y2"
        android:background="@drawable/sl_item_red_packet"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/y5"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_item_red_packet_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5元"
                android:textColor="@color/black_252323"
                android:textSize="@dimen/y15"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_item_red_packet_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/y5"
                android:layout_marginTop="@dimen/y5"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="领取后直接转入余额"
                android:textColor="@color/black_252323"
                android:textSize="@dimen/y10" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="领取期限"
                    android:textColor="@color/black_252323"
                    android:textSize="@dimen/y10" />

                <TextView
                    android:id="@+id/tv_item_red_packet_start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2017.09.26"
                    android:textColor="@color/black_252323"
                    android:textSize="@dimen/y10" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textColor="@color/black_252323"
                    android:textSize="@dimen/y10" />

                <TextView
                    android:id="@+id/tv_item_red_packet_end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2017.09.30"
                    android:textColor="@color/black_252323"
                    android:textSize="@dimen/y10" />

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/y5">

            <TextView
                android:id="@+id/tv_item_red_packet_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="立即领取"
                android:textColor="@color/black_252323"
                android:textSize="@dimen/y10" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>