<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/y5">

        <ImageView
            android:id="@+id/iv_item_add_skill_icon"
            android:layout_width="@dimen/y31"
            android:layout_height="@dimen/y31"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:src="@mipmap/person_face_default" />

        <TextView
            android:id="@+id/tv_item_add_skill_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/y5"
            android:layout_marginRight="@dimen/y5"
            android:layout_toRightOf="@+id/iv_item_add_skill_icon"
            android:layout_weight="1"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/gray_a0a0a0"
            android:textSize="@dimen/y10"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/cb_item_add_kind_checked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical" />

    </LinearLayout>

</LinearLayout>