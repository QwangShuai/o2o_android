<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_pwd"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="activity.PwdActivity">

    <RelativeLayout style="@style/rl_top_bar">

        <RelativeLayout
            android:id="@+id/rl_pwd_return"
            style="@style/rl_return">

            <ImageView style="@style/iv_return" />

        </RelativeLayout>

        <TextView
            style="@style/tv_top_title"
            android:text="密码设置" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/et_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@null"
            android:inputType="number"
            android:maxLength="6"
            android:singleLine="true"
            android:textColor="@color/white_ffffff"
            android:textCursorDrawable="@color/white_ffffff" />

        <TextView
            android:id="@+id/tv_pwd_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_pwd"
            android:layout_centerHorizontal="true" />

        <LinearLayout
            android:id="@+id/ll_pwd"
            style="@style/ll_pwd"
            android:layout_below="@+id/tv_pwd_tip">

            <RelativeLayout style="@style/rl_pwd">

                <ImageView
                    android:id="@+id/iv_pwd_point_0"
                    style="@style/iv_pwd" />

            </RelativeLayout>

            <View style="@style/v_pwd" />

            <RelativeLayout style="@style/rl_pwd">

                <ImageView
                    android:id="@+id/iv_pwd_point_1"
                    style="@style/iv_pwd" />

            </RelativeLayout>

            <View style="@style/v_pwd" />

            <RelativeLayout style="@style/rl_pwd">

                <ImageView
                    android:id="@+id/iv_pwd_point_2"
                    style="@style/iv_pwd" />

            </RelativeLayout>

            <View style="@style/v_pwd" />

            <RelativeLayout style="@style/rl_pwd">

                <ImageView
                    android:id="@+id/iv_pwd_point_3"
                    style="@style/iv_pwd" />

            </RelativeLayout>

            <View style="@style/v_pwd" />

            <RelativeLayout style="@style/rl_pwd">

                <ImageView
                    android:id="@+id/iv_pwd_point_4"
                    style="@style/iv_pwd" />

            </RelativeLayout>

            <View style="@style/v_pwd" />

            <RelativeLayout style="@style/rl_pwd">

                <ImageView
                    android:id="@+id/iv_pwd_point_5"
                    style="@style/iv_pwd" />

            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_pwd_fgt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/ll_pwd"
            android:text="忘记密码"
            android:visibility="gone" />

    </RelativeLayout>

</LinearLayout>
